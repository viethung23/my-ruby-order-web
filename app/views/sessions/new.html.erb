<h1>Login</h1>

<%= form_with url: login_path, local: true do |form| %>
  <% if flash[:alert] %>
    <p style="color: red"><%= flash[:alert] %></p>
  <% end %>

  <div>
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit "Login" %>
  </div>
<% end %>
